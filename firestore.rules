rules_version = '2';

// Firestore Security Rules for Resume Generator
// Public (no-login) access with App Check enforcement

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to verify App Check token
    function isAppCheckVerified() {
      return request.auth == null || request.auth.token.firebase.sign_in_provider == 'anonymous';
    }

    // Cases collection - users can read their own case by ID
    match /cases/{caseId} {
      // Anyone can create a case (rate limited at API level)
      allow create: if true;

      // Read allowed with case ID (acts as access token)
      allow read: if true;

      // No updates or deletes from client
      allow update, delete: if false;
    }

    // Case documents - read-only from client
    match /case_documents/{docId} {
      allow read: if true;
      allow write: if false;
    }

    // Case artifacts - read-only from client
    match /case_artifacts/{artifactId} {
      allow read: if true;
      allow write: if false;
    }

    // Case events - read-only from client (for status tracking)
    match /case_events/{eventId} {
      allow read: if true;
      allow write: if false;
    }

    // Operation Hired - Candidates collection
    match /candidates/{candidateId} {
      // Anyone can create a candidate
      allow create: if true;
      // Read allowed with candidate ID
      allow read: if true;
      // Allow status updates from client
      allow update: if true;
      // No deletes from client
      allow delete: if false;
    }

    // Operation Hired - Candidate Documents collection
    match /candidateDocuments/{docId} {
      // Anyone can create document records
      allow create: if true;
      // Read allowed
      allow read: if true;
      // No updates or deletes from client
      allow update, delete: if false;
    }

    // Operation Hired - Candidate Profiles (AI-generated)
    match /candidateProfiles/{candidateId} {
      // Read allowed with candidate ID
      allow read: if true;
      // Write only from server
      allow write: if false;
    }

    // Operation Hired - Generated Resumes
    match /resumes/{candidateId} {
      // Read allowed with candidate ID
      allow read: if true;
      // Write only from server
      allow write: if false;
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
